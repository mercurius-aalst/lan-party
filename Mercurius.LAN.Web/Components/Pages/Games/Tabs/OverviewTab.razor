@using Mercurius.LAN.Web.Extensions
@using Mercurius.LAN.Web.Models
@code {
    [Parameter] public GameExtended Game { get; set; }
}
<div>
    <h2>Overzicht</h2>
    <p><b>Naam:</b> @Game.Name</p>
    <p><b>Status:</b> @Game.Status.GetStatusLabel()</p>
    <p><b>Type:</b> @Game.BracketType.GetLabel()</p>
    <p><b>Beschrijving:</b> @Game.Description</p>
</div>
