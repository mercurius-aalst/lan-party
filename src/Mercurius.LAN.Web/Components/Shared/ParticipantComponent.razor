@using Mercurius.LAN.Web.Models.Participants;

@if (Participant is Player player)
{
    <div>
        <div class="participant-header-row">
            <span class="participant-type">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--accent-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="7" r="4" /><path d="M5.5 21a7.5 7.5 0 0 1 13 0" /></svg>
                Player
            </span>
            <span class="participant-name">@player.Username
                <span class="copy-icon" data-copy="@player.Username" onclick="copyToClipboardFromElement(this)" title="Copy username" role="button" tabindex="0">
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><rect x="9" y="2" width="6" height="4" rx="1" /><path d="M16 4h-1.5l-1-1h-5l-1 1H8a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2z" /></svg>
                </span>
            </span>
        </div>
        <table class="participant-table">
            <tr><td>Name:</td><td>@player.Firstname @player.Lastname</td></tr>
            <tr>
                <td><span class="platform-icon discord-icon"></span>Discord:</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(player.DiscordId))
                    {
                        <a href="https://discord.com/users/@player.DiscordId" target="_blank">@player.DiscordId</a>
                        <span class="copy-icon" data-copy="@player.DiscordId" onclick="copyToClipboardFromElement(this)" title="Copy Discord ID" role="button" tabindex="0">
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><rect x="9" y="2" width="6" height="4" rx="1" /><path d="M16 4h-1.5l-1-1h-5l-1 1H8a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2z" /></svg>
                        </span>
                    }
                    else
                    {
                        <span></span>
                    }
                </td>
            </tr>
            <tr>
                <td><span class="platform-icon steam-icon"></span>Steam:</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(player.SteamId))
                    {
                        <a href="https://steamcommunity.com/id/@player.SteamId" target="_blank">@player.SteamId</a>
                        <span class="copy-icon" data-copy="@player.SteamId" onclick="copyToClipboardFromElement(this)" title="Copy Steam ID" role="button" tabindex="0">
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><rect x="9" y="2" width="6" height="4" rx="1" /><path d="M16 4h-1.5l-1-1h-5l-1 1H8a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2z" /></svg>
                        </span>
                    }
                    else
                    {
                        <span></span>
                    }
                </td>
            </tr>
            <tr>
                <td><span class="platform-icon riot-icon"></span>Riot:</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(player.RiotId))
                    {
                        @player.RiotId
                        <span class="copy-icon" data-copy="@player.RiotId" onclick="copyToClipboardFromElement(this)" title="Copy Riot ID" role="button" tabindex="0">
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><rect x="9" y="2" width="6" height="4" rx="1" /><path d="M16 4h-1.5l-1-1h-5l-1 1H8a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2z" /></svg>
                        </span>
                    }
                    else
                    {
                        <span></span>
                    }
                </td>
            </tr>
        </table>
    </div>
}
else if (Participant is Team team)
{
    <div>
        <div class="participant-header-row">
            <span class="participant-type">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--accent-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H7a4 4 0 0 0-4 4v2" /><circle cx="9" cy="7" r="4" /><path d="M23 21v-2a4 4 0 0 0-3-3.87" /><path d="M16 3.13a4 4 0 0 1 0 7.75" /></svg>
                Team
            </span>
            <span class="participant-name">@team.Name</span>
        </div>
        @if(team.Players?.FirstOrDefault(p => p.Id == team.CaptainId) is Player captain)
        {
            <div class="captain-label">Captain</div>
            <div class="captain-name">@captain.Username
                    <span class="copy-icon" data-copy="@captain.Username" onclick="copyToClipboardFromElement(this)" title="Copy username" role="button" tabindex="0">
                        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><rect x="9" y="2" width="6" height="4" rx="1" /><path d="M16 4h-1.5l-1-1h-5l-1 1H8a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2z" /></svg>
                    </span>
            </div>
            <table class="participant-table">
                <tr><td>Name:</td><td>@captain.Firstname @captain.Lastname</td></tr>
                <tr>
                    <td><span class="platform-icon discord-icon"></span>Discord:</td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(captain.DiscordId))
                        {
                            <a href="https://discord.com/users/@captain.DiscordId" target="_blank">@captain.DiscordId</a>
                            <span class="copy-icon" data-copy="@captain.DiscordId" onclick="copyToClipboardFromElement(this)" title="Copy Discord ID" role="button" tabindex="0">
                                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><rect x="9" y="2" width="6" height="4" rx="1" /><path d="M16 4h-1.5l-1-1h-5l-1 1H8a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2z" /></svg>
                            </span>
                        }
                        else
                        {
                            <span></span>
                        }
                    </td>
                </tr>
                <tr>
                    <td><span class="platform-icon steam-icon"></span>Steam:</td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(captain.SteamId))
                        {
                            <a href="https://steamcommunity.com/id/@captain.SteamId" target="_blank">@captain.SteamId</a>
                            <span class="copy-icon" data-copy="@captain.SteamId" onclick="copyToClipboardFromElement(this)" title="Copy Steam ID" role="button" tabindex="0">
                                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><rect x="9" y="2" width="6" height="4" rx="1" /><path d="M16 4h-1.5l-1-1h-5l-1 1H8a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2z" /></svg>
                            </span>
                        }
                        else
                        {
                            <span></span>
                        }
                    </td>
                </tr>
                <tr>
                    <td><span class="platform-icon riot-icon"></span>Riot:</td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(captain.RiotId))
                        {
                            @captain.RiotId
                            <span class="copy-icon" data-copy="@captain.RiotId" onclick="copyToClipboardFromElement(this)" title="Copy Riot ID" role="button" tabindex="0">
                                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><rect x="9" y="2" width="6" height="4" rx="1" /><path d="M16 4h-1.5l-1-1h-5l-1 1H8a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2z" /></svg>
                            </span>
                        }
                        else
                        {
                            <span></span>
                        }
                    </td>
                </tr>
            </table>
        }
    </div>
}
else if (Participant != null)
{
    <div>
        <div class="participant-header-row">
            <span class="participant-type">Unknown</span>
            <span class="participant-name">@Participant.Id
                <span class="copy-icon" data-copy="@Participant.Id" onclick="copyToClipboardFromElement(this)" title="Copy id" role="button" tabindex="0">
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path d="M16 1H4a2 2 0 0 0-2 2v14" stroke-linecap="round" stroke-linejoin="round"></path><rect x="8" y="5" width="13" height="13" rx="2" stroke-linecap="round" stroke-linejoin="round"></rect></svg>
                </span>
            </span>
        </div>
    </div>
}
else
{
    <div>
        <div class="participant-header-row">
            <span class="participant-type">@EmptyLabel</span>
        </div>
    </div>
}
